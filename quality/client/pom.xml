<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.bazaarvoice.emodb</groupId>
        <artifactId>emodb-parent</artifactId>
        <version>6.3.3-SNAPSHOT</version>
        <relativePath>../../parent/pom.xml</relativePath>
    </parent>

    <artifactId>emodb-client-tests</artifactId>

    <name>EmoDB Client Integration Tests</name>

    <properties>
        <zkConnection>localhost:2181</zkConnection>
        <zkNamespace></zkNamespace>
        <clusterName>local_default</clusterName>
        <placement>ugc_global:ugc</placement>
        <remotePlacement>app_remote:default</remotePlacement>
        <mediaPlacement>blob_global:media</mediaPlacement>
        <apiKey>local_admin</apiKey>
        <clientHttpKeepAlive>1</clientHttpKeepAlive>
        <clientHttpTimeout>10</clientHttpTimeout>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpclient</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
        </dependency>
        <dependency>
            <groupId>com.bazaarvoice.emodb</groupId>
            <artifactId>emodb-sor-client</artifactId>
        </dependency>
        <dependency>
            <groupId>com.bazaarvoice.emodb</groupId>
            <artifactId>emodb-common-uuid</artifactId>
        </dependency>
        <dependency>
            <groupId>com.bazaarvoice.curator</groupId>
            <artifactId>dropwizard</artifactId>
        </dependency>
        <dependency>
            <groupId>com.bazaarvoice.ostrich.zookeeper</groupId>
            <artifactId>ostrich-zookeeper-discovery</artifactId>
        </dependency>
        <dependency>
            <groupId>com.bazaarvoice.emodb</groupId>
            <artifactId>emodb-databus-client</artifactId>
        </dependency>
        <dependency>
            <groupId>com.bazaarvoice.emodb</groupId>
            <artifactId>emodb-uac-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.bazaarvoice.emodb</groupId>
            <artifactId>emodb-uac-client</artifactId>
        </dependency>
        <dependency>
            <groupId>com.bazaarvoice.emodb</groupId>
            <artifactId>emodb-queue-client</artifactId>
        </dependency>
        <dependency>
            <groupId>com.bazaarvoice.emodb</groupId>
            <artifactId>emodb-blob-client</artifactId>
        </dependency>
        <dependency>
            <groupId>com.bazaarvoice.emodb</groupId>
            <artifactId>emodb-blob-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
        </dependency>
    </dependencies>


    <build>
        <!-- find all tests under this directory -->
        <testSourceDirectory>${project.basedir}/src/test/java/</testSourceDirectory>
        <resources>
            <resource>
                <directory>${project.basedir}/src/test/resources/</directory>
            </resource>
        </resources>


        <plugins>
            <!-- configure surefire to not run -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-report-plugin</artifactId>
                <configuration>
                    <skipSurefireReport>true</skipSurefireReport>
                </configuration>
            </plugin>

            <!-- configure common failsafe plugin items -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                    <suiteXmlFiles>
                        <suiteXmlFile>src/test/resources/testNGXMLs/all_emo.xml</suiteXmlFile>
                    </suiteXmlFiles>
                    <workingDirectory>target/</workingDirectory>

                    <systemPropertyVariables>
                        <emoVersion>${emodb.version}</emoVersion>

                        <apiKey>${apiKey}</apiKey>
                        <zkConnection>${zkConnection}</zkConnection>
                        <zkNamespace>${zkNamespace}</zkNamespace>
                        <clusterName>${clusterName}</clusterName>
                        <placement>${placement}</placement>
                        <remotePlacement>${remotePlacement}</remotePlacement>
                        <mediaPlacement>${mediaPlacement}</mediaPlacement>

                        <clientHttpKeepAlive>${clientHttpKeepAlive}</clientHttpKeepAlive>
                        <clientHttpTimeout>${clientHttpTimeout}</clientHttpTimeout>

                        <testng.dtd.http>true</testng.dtd.http>
                        <resources>${project.basedir}/src/test/resources/</resources>
                    </systemPropertyVariables>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>emodb-e2e-client</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <configuration>
                            <skip>false</skip>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>